<div class="container content-container">
  <div class="background-container">
    <% if @messages.present? %>
      <div id="messages" data-conversation-id="<%= conversation.id %>">
        <% @messages.order(created_at: :asc).each do |message| %>
          <%= render "message", conversation: conversation, message: message  %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
